{
  "name": "@epdoc/fs",
  "version": "1.2.19",
  "description": "Type-safe file system operations with FileSpec, FolderSpec, and streaming support for Node.js and Deno",
  "tasks": {
    "docs": "deno doc --json src/mod.ts > library-docs.json",
    "prepublish": "deno fmt && deno task lint && deno task check && deno task test && deno task docs",
    "test": "deno test -SERW test",
    "test1": "deno test -SERW ./test/fs.test.ts",
    "lint": "deno lint *.json *.ts src test",
    "check": "deno check *.json *.ts src test"
  },
  "exports": {
    ".": "./src/mod.ts",
    "./fs": "./src/fs.ts"
  },
  "tests": {
    "include": [
      "test/**/*.ts"
    ],
    "permissions": {
      "env": true,
      "net": true,
      "read": true,
      "write": true,
      "sys": true
    }
  },
  "lint": {
    "exclude": [
      "tests/*/*.*"
    ]
  },
  "fmt": {
    "exclude": [
      "tests/readonly/**/*.*"
    ]
  },
  "imports": {
    "$mod": "./src/mod.ts",
    "$fs": "./src/fs.ts",
    "$error": "./src/error/mod.ts",
    "$util": "./src/util/mod.ts",
    "$spec": "./src/spec/mod.ts",
    "$walk": "./src/walk/mod.ts",
    "@epdoc/datetime": "jsr:@epdoc/datetime@^2.0.14",
    "@epdoc/response": "jsr:@epdoc/response@^0.1.12",
    "@epdoc/string": "jsr:@epdoc/string@^0.1.16",
    "@epdoc/type": "jsr:@epdoc/type@^1.2.6",
    "@std/bytes": "jsr:@std/bytes@^1.0.6",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.22",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@std/yaml": "jsr:@std/yaml@^1.0.11"
  }
}