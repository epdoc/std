{
  "name": "@epdoc/fs",
  "version": "1.1.0",
  "description": "File system entry wrapper",
  "tasks": {
    "test": "deno test -SERW",
    "test1": "deno test -SERW ./test/fs.test.ts"
  },
  "exports": {
    ".": "./src/mod.ts",
    "./fs": "./src/fs.ts"
  },
  "tests": {
    "include": [
      "test/**/*.ts"
    ],
    "permissions": {
      "env": true,
      "net": true,
      "read": true,
      "write": true,
      "sys": true
    }
  },
  "lint": {
    "exclude": [
      "tests/*/*.*"
    ]
  },
  "fmt": {
    "exclude": [
      "tests/readonly/**/*.*"
    ]
  },
  "imports": {
    "$mod": "./src/mod.ts",
    "$fs": "./src/fs.ts",
    "$error": "./src/error/mod.ts",
    "$util": "./src/util/mod.ts",
    "$spec": "./src/spec/mod.ts",
    "$walk": "./src/walk/mod.ts",
    "@epdoc/datetime": "jsr:@epdoc/datetime@^2.0.1",
    "@epdoc/response": "jsr:@epdoc/response@^0.1.6",
    "@epdoc/string": "jsr:@epdoc/string@^0.1.5",
    "@epdoc/type": "jsr:@epdoc/type@^1.1.17",
    "@std/bytes": "jsr:@std/bytes@^1.0.6",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2"
  }
}